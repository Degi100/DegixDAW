{
  "name": "degixdaw-monorepo",
  "version": "1.0.0",
  "description": "DegixDAW - Professional Music Collaboration Platform with DAW Integration",
  "private": true,
  "workspaces": [
    "web/frontend",
    "web/backend",
    "packages/types",
    "packages/utils",
    "packages/constants"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=web/frontend",
    "dev:backend": "npm run dev --workspace=web/backend",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace=web/frontend",
    "build:backend": "npm run build --workspace=web/backend",
    "build:all": "npm run build:frontend && npm run build:backend",
    "lint:frontend": "npm run lint --workspace=web/frontend",
    "lint:backend": "npm run lint --workspace=web/backend",
    "lint:all": "npm run lint:frontend && npm run lint:backend",
    "test:frontend": "npm test --workspace=web/frontend",
    "test:all": "npm run test:frontend",
    "install:all": "npm install && npm install --workspaces",
    "clean": "rm -rf node_modules web/frontend/node_modules web/backend/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/degixdaw.git"
  },
  "keywords": [
    "daw",
    "music",
    "collaboration",
    "audio",
    "vst",
    "react",
    "typescript",
    "supabase"
  ],
  "author": "DegixDAW Team",
  "license": "MIT"
}
